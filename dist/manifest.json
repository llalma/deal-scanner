{
  "name": "Price-Scanner-TBD",
  "description": "Add URLs for specific items you wish to track. These Items can then be automatically scanned to find out if its on sale",
  "version": "0.2",
  "manifest_version": 3,
  "action": {
    "default_icon": "images/icon-32.png",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/service_worker/service_worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage"],
  "optional_permissions": ["scripting"],
  "optional_host_permissions": ["https://*/*"]
}
